 "doctype": "Print Format",
 "font_size": 14,
 "html": "<!DOCTYPE html>\r\n<html lang=\"en\">\r\n<head>\r\n    <style>\r\n        body {\r\n            font-family: \"Times New Roman\", Times, serif;\r\n            font-size: 12px;\r\n        }\r\n    </style>\r\n</head>\r\n<body>\r\n    <div id=\"header-html\" class=\"hidden-pdf\">\r\n        {%- if letter_head and not no_letterhead -%}\r\n            <div class=\"letter-head\">\r\n                {{ letter_head }}\r\n            </div>\r\n        {%- endif -%}\r\n    </div>\r\n\r\n    <!--<div style=\"display: flex; justify-content: space-between; margin-top: -20px;\">-->\r\n    <!--    <span>HMS/HR-07/2024/</span>-->\r\n    <!--    <span>-->\r\n    <!--        {% set dt = frappe.utils.getdate(doc.posting_date) %}-->\r\n    <!--        {% set formatted_date = dt.strftime('%B %d, %Y') %}-->\r\n    <!--        {{ formatted_date }}-->\r\n    <!--    </span>-->\r\n    <!--</div>-->\r\n    \r\n    <div style=\"text-align: center; font-weight: bold; margin-top: 1px; margin-bottom: 20px;\">\r\n        Travel Authorisation Form\r\n    </div>\r\n    \r\n    <div style=\"display: flex; justify-content: space-between; margin-top: 20px; margin-bottom: 20px;\">\r\n        <div>\r\n            <p>Emplyee: <b>{{ doc.employee }}</b></p>\r\n            <p>Position Title: <b>{{ doc.designation }}</b></p>\r\n        </div>\r\n        <div>\r\n            <p>Emplyee Name: <b>{{ doc.employee_name }}</b></p>\r\n            <p>Positon Level: <b>{{ doc.grade }}</b></p>\r\n        </div>\r\n        <div>\r\n            <p>{% set dt = frappe.utils.getdate(doc.posting_date) %}\r\n            {% set formatted_date = dt.strftime('%B %d, %Y') %}\r\n            Date: <b>{{ formatted_date }}</b></p>\r\n        </div>\r\n    </div>\r\n    \r\n    <div style=\"text-align: justify;\">\r\n        <table>\r\n            <thead>\r\n                <tr>\r\n                    <th class=\"col\" colspan=\"2\">From</th>\r\n                    <th class=\"col\" colspan=\"2\">To</th>\r\n                    <th class=\"col\" rowspan=\"2\">Mode Of Travel</th>\r\n                    <th class=\"col\" rowspan=\"2\">Halt At</th>\r\n                    <th class=\"col\" rowspan=\"2\">Purpose</th>\r\n                </tr>\r\n                <tr>\r\n                    <th class=\"col\">Station</th>\r\n                    <th class=\"col\">Date</th>\r\n                    <th class=\"col\">Station</th>\r\n                    <th class=\"col\">Date</th>\r\n                    \r\n                </tr>\r\n            </thead>\r\n            <tbody>\r\n                {% for row in doc.itinerary %}\r\n                <tr>\r\n                    <td class=\"col\" style=\"width: 10%;\">\r\n                        {% if row.travel_from %}\r\n                            {{ row.travel_from }}\r\n                        {% endif %}\r\n                    </td>\r\n                    <td class=\"col\" style=\"width: 15%;\">\r\n                        {% if row.from_date %}\r\n                            {{ row.from_date }}\r\n                        {% endif %}\r\n                    </td>\r\n                    <td class=\"col\" style=\"width: 10%;\">\r\n                        {% if row.travel_to %}\r\n                            {{ row.travel_to }}\r\n                        {% endif %}\r\n                    </td>\r\n                    <td class=\"col\" style=\"width: 15%;\">\r\n                        {% if row.to_date %}\r\n                            {{ row.to_date }}\r\n                        {% endif %}  \r\n                    </td>\r\n                    <td class=\"col\" style=\"width: 15%;\">{{ row.mode_of_travel }}</td>\r\n                    <td class=\"col\" style=\"width: 10%;\">\r\n                        {% if row.halt_at %}\r\n                            {{ row.halt_at }}\r\n                        {% endif %}\r\n                    </td>\r\n                    <td class=\"col\" style=\"width: 25%;\">\r\n                        <!-- Adjust content here as needed, this cell will span all rows -->\r\n                    </td>\r\n                </tr>\r\n                {% endfor %}\r\n            </tbody>\r\n        </table>\r\n    </div>\r\n    \r\n     <div style=\"display: flex; justify-content: space-between; margin-top: 40px;\">\r\n        <div>\r\n            <p>Estimated Travling Expenses: </p>\r\n            <p>Advance Required: </p>\r\n        </div>\r\n        <div>\r\n            <p>Tr. Advance Outstanding: </p>\r\n            <p>Since (date)</p>\r\n        </div>\r\n        <div>\r\n            <p>Advance of Nu.</p>\r\n            <p>Santioned/Recommended</p>\r\n        </div>\r\n    </div>\r\n    \r\n    <div style=\"padding-top: 80px; clear: both;\">\r\n            <div style=\"font-size: small; width: 33%; float: left; text-align:center;\">\r\n                (Signature of employee) <br />\r\n                Date\r\n            </div>\r\n            <div style=\"font-size: small; width: 33%; float: left; text-align:center;\">\r\n                (Signature & Seal, Head of Finance) <br />\r\n                Date\r\n            </div>\r\n            <div style=\"font-size: small; width: 33%; float: right; text-align:center;\">\r\n                (Signature & Seal, Controlling Officer) <br />\r\n                Date\r\n            </div>\r\n        </div>\r\n\r\n    <footer id=\"footer-html\" class=\"visible-pdf\" style=\"position:absolute; bottom:0;\">\r\n        {% if not no_letterhead and footer %}\r\n            <div class=\"letter-head-footer\">\r\n                {{ footer }}\r\n            </div>\r\n        {% endif %}\r\n\r\n        <p class=\"text-center small page-number visible-pdf\">\r\n            {{ _(\"Page {0} of {1}\").format('<span class=\"page\"></span>', '<span class=\"topage\"></span>') }}\r\n        </p>\r\n    </footer>\r\n</body>\r\n</html>\r\n",
