 "css": "table {\n\tmax-width: 100%;\n\tmargin: 0 auto;\n    width: 100%;\n    text-align:justify;\n    font-size:small;\n}\nth{\n    background:#E6E6E6;\n    color:black;\n    font-size:12px;\n}\nth, td {\n        border: 1px solid black; /* Adds border to all table cells */\n        padding: 8px;\n}\n#col{\n    border:1px solid #CBCBCB;\n\tborder-collapse: collapse;\n\tfont-size:12px;\n\ttext-align: center;\n}",
